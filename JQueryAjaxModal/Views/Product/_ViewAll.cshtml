@model IEnumerable<JQueryAjaxModal.Models.Product>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producer)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Status)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Producer)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>*@
                <td>
                    <a onclick="showInPopup('@Url.Action("Edit","Product",new {id=item.Id},Context.Request.Scheme)','Edit Product')" class="btn btn-success text-white"><i class="action-icons"></i>Edit</a>
                    <form asp-action="Details" asp-route-id="@item.Id" class="d-inline">
                        <input type="submit" value="Details" class="btn btn-warning text-white" />
                        </form> 
                    <form asp-action="Delete" asp-route-id="@item.Id" onsubmit="return jQueryAjaxDelete(this);" class="d-inline">
                        <input type="submit" value="Delete" class="btn btn-danger text-white" />
                    </form>
                    
                </td>
            </tr>
        }
    </tbody>
</table>
